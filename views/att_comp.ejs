<html>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" 
    integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <head>
        <header style="color: darkcyan;font-weight: bold;">
            Nandini Agrawal
            <br>Attendance Grid
            <br>Employee ID : 24DEV075
        </header>

        <style>
            p{font-size: 20px;}
            i{background-color: aqua; height: 20px; width: 30px; text-align: center; border: 1px solid black;
            margin-top: 10px;}
            select{
                height: 20px; width: 50%; background-color: antiquewhite;  margin-top: 20px;
            }
        </style>
    </head>
    <body>
       
        <p>Month is : <%=month %></p>
        <% if(m == 12){ %>
            Choosen Year/Month is :- DEC 2023
        <% } else if(m == 1){ %>
            Choosen Year/Month is :- JAN 2024
        <% } else { %>
            Choosen Year/Month is :- FEB 2024
        <% } %>
        <form action="/att/?page=1" method="get">
            <select name="month" id="month">
                <% if(m == 12){ %>
                    <option value="december" selected>december</option>
                    <% } else if(m == 1){ %>
                    <option value="january" selected>january</option>
                    <% } else { %>
                    <option value="february" selected>february</option>
                    <% } %>  
                <option value="december">december</option>
                <option value="january">january</option>
                <option value="february">february</option>

            </select>
            <input type="submit" value="Search">
        </form>
            <div>
                <a href="/att?page=1&month=<%=month%>"<%if(Number(p)==1){%>onclick='return false;'}<%}%>> 
                    <i class="fa-solid fa-backward"></i></a>
                <a href="/att?page=<%=Number(p)-1 %> &month=<%=month%>"<%if(Number(p)==1){%>onclick='return false;'} <%}%> >
                    <i class="fa-solid fa-angle-left"></i></a>

                <%=p%>
                <a href="/att?page=<%=Number(p)+1 %>&month=<%=month%>" <%if(Number(p)==3){%>onclick='return false;'<%}%> >
                    <i class="fa-solid fa-angle-right"></i></a>
                <a href="/att?page=<%=lastpage%>&month=<%=month%>" <%if(Number(p)==3){%>onclick='return false;'} <%}%> > 
                    <i class="fa-solid fa-forward"></i></a>
            </div>
    </body>
</html>