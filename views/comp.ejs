<html>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
    i {
        border: 1px solid aquamarine;
        font-size: 20px;
        width: 30px;
        text-align: center;
        height: 20px;
        background-color: aquamarine;
        color: black;
        padding: 10px;
    }

    div {
        text-align: end;
    }

    select {
        padding: 10px;
        margin: 10px;
        text-align: center;
    }

    h3 {
        text-align: center;
    }
</style>

<div>
    <% if(Number(page)!=1) {%>
        <a href="/studentSort?page=1&order=<%= order %>"><i class="fa-solid fa-backward"></i></a>
        <a href="/studentSort?page=<%= Number(page)-1 %>&order=<%= order %>"> <i class="fa-solid fa-arrow-left"></i></a>
    <% } %>
    <%= page %> Page
    <% if(Number(page) !=10) {%>
        <a href="/studentSort?page=<%= Number(page)+1 %>&order=<%= order %>"> <i class="fa-solid fa-arrow-right"></i> </a>
        <a href="/studentSort?page=10&order=<%= order %>"> <i class="fa-solid fa-forward"></i> </a>
    <% } %>
</div>

<div>
    <h3><p id="order">Sorted ID in <%= order %> Order.</h3></p>
    <select class="div" style="background-color: cadetblue;color: white;font-weight: bold;font-size: 15px;">
        <option name="asc" value="asc" onclick="orderbyname('asc')">A-Z</option>
        <option name="desc" value="desc" onclick="orderbyname('desc')">Z-A</option>
    </select>
</div>

<script>
    function orderbyname(first_name) {
        let order = first_name;
        console.log(first_name)
        document.getElementById('order').innerHTML = order;
        window.location = `http://localhost:6009/studentSort?order=${order}`;
    }
</script>