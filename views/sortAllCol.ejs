                <%if(Number(page)==1){%>onclick='return false; '} <%}%>
                >  <i class="fa-solid fa-arrow-left"></i></a>
        
            <%= page %> Page
            
            <%if(Number(page)!=10){%>
            <a href="/SortCols?page=<%= Number(page)+1 %>&select=<%=sortField%>&sort=<%= sortorder %>"<%if(Number(page)==last){%>onclick='return false; '} <%}%>> 
